<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_x="70dp"
        android:layout_y="447dp"
        android:background="@drawable/signup_b"
        android:text="Create"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_x="130dp"
        android:layout_y="22dp"
        android:src="@drawable/inspiration_6" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="399dp"
        android:text="Number of Pages/Days : "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_x="246dp"
        android:layout_y="400dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="17dp"
        android:layout_y="139dp"
        android:text="Group Name"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="131dp"
        android:background="@drawable/hhh"
        android:ems="10"
        android:hint="group name"
        android:maxLength="40"
        android:paddingLeft="75dp"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="215dp"
        android:text="Group Desc."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="239dp"
        android:layout_height="73dp"
        android:layout_x="100dp"
        android:layout_y="193dp"
        android:background="@drawable/hhh"
        android:ems="10"
        android:gravity="left|start"
        android:hint="Add Group Description here"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_x="60dp"
        android:layout_y="328dp"
        android:background="@drawable/hhh"
        android:ems="10"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="296dp"
        android:text="Number of Pages"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="205dp"
        android:layout_y="298dp"
        android:text="Number of Days"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="68dp"
        android:layout_height="36dp"
        android:layout_x="224dp"
        android:layout_y="330dp"
        android:background="@drawable/hhh"
        android:ems="10"
        android:gravity="center"
        android:hint="0"
        android:inputType="number"
        android:textSize="16sp" />

</AbsoluteLayout>