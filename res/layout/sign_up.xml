<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/textPost"
        android:layout_width="201dp"
        android:layout_height="34dp"
        android:layout_x="75dp"
        android:layout_y="376dp"
        android:background="@drawable/signup_b"
        android:maxLength="14"
        android:text="Create Account"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="134dp"
        android:layout_height="33dp"
        android:layout_x="107dp"
        android:layout_y="429dp"
        android:background="@drawable/signin_b"
        android:text="Cancel"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_x="46dp"
        android:layout_y="309dp"
        android:background="@drawable/hhh"
        android:ems="10"
        android:gravity="center"
        android:hint="   Email"
        android:textSize="13sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/posttitle"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_x="46dp"
        android:layout_y="257dp"
        android:background="@drawable/hhh"
        android:ems="10"
        android:gravity="center"
        android:hint=" Password"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textSize="13sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/postcontent"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_x="47dp"
        android:layout_y="209dp"
        android:background="@drawable/hhh"
        android:ems="10"
        android:gravity="center"
        android:hint="   Username"
        android:maxLength="12"
        android:textSize="13sp"
        android:textStyle="italic" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="139dp"
        android:layout_y="92dp"
        android:clickable="true"
        android:src="@drawable/inspiration_6" />

</AbsoluteLayout>