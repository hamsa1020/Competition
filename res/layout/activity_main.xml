<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/examguidebackgnolayer"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ieee_competetion_examguide.MainActivity" >

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_x="15dp"
        android:layout_y="317dp"
        android:background="@drawable/field2"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="40dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_x="15dp"
        android:layout_y="265dp"
        android:background="@drawable/field2"
        android:ems="10"
        android:hint="username"
        android:paddingLeft="42dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="18sp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="111dp"
        android:layout_height="47dp"
        android:layout_x="40dp"
        android:layout_y="390dp"
        android:background="@drawable/signin_b"
        android:gravity="center"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="111dp"
        android:layout_height="47dp"
        android:layout_x="175dp"
        android:layout_y="390dp"
        android:background="@drawable/signup_b"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_x="26dp"
        android:layout_y="331dp"
        android:src="@drawable/passicon" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_x="20dp"
        android:layout_y="270dp"
        android:src="@drawable/usericon" />

</AbsoluteLayout>